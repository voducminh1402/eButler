@model eButler.Pages.Admin.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}


@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
    var genID = Guid.NewGuid().ToString();
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Product</h4>
                    @*<p class="card-description">
                    User
                    </p>*@

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Product.Id" class="control-label"></label>
                            <input asp-for="Product.Id" class="form-control" value=@genID readonly />
                            <span asp-validation-for="Product.Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.Name" class="control-label"></label>
                            <input asp-for="Product.Name" class="form-control"/>
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.CategoryId" class="control-label">Category</label>
                            <select asp-for="Product.CategoryId" class="form-control" asp-items="ViewBag.CategoryName"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>



