@page
@model eButler.Pages.Admin.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Details</h4>
                    <table class="table table-borderless report-table">
                        <tbody>
                            <tr>
                                <td class="text-muted">Name</td>

                                <td><h5 class="font-weight-bold mb-0">@Html.DisplayFor(model => model.Product.Name)</h5></td>
                            </tr>
                            <tr>
                                <td class="text-muted">Category</td>

                                <td><h5 class="font-weight-bold mb-0">@Html.DisplayFor(model => model.Product.Category.Name)</h5></td>
                            </tr>
                            
                        </tbody>
                    </table>
                    <div>
                        <a class="btn btn-primary btn-icon-text" asp-page="./Edit" asp-route-id="@Model.Product.Id">Edit</a> |
                        <a asp-page="./Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


