@page
@model eButler.Pages.Admin.Products.DeleteModel



@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Delete Product</h4>
                    <table class="table table-borderless report-table">
                        <tbody>
                            <tr>
                                <td class="text-muted">Name</td>

                                <td><h5 class="font-weight-bold mb-0">@Html.DisplayFor(model => model.Product.Name)</h5></td>
                            </tr>
                            <tr>
                                <td class="text-muted">Category</td>

                                <td><h5 class="font-weight-bold mb-0">@Html.DisplayFor(model => model.Product.Category.Name)</h5></td>
                            </tr>
                        </tbody>
                    </table>
                    <form method="post">
                        <input type="hidden" asp-for="Product.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-page="./Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



