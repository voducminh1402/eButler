@page
@model eButler.Pages.Admin.Products.IndexModel

@{
    ViewData["Title"] = "Product Management";
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}


@if (Model.Product != null)
{
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Product Management</h4>
                        <a class="card-description" asp-page="Create">
                            Create New Product
                        </a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Product)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Category.Name)
                                            </td>
                                            <td class="template-demo" style="padding-top: 0; padding-bottom: 10px;">
                                                <a class="btn btn-primary btn-icon-text" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                                <a class="btn btn-info btn-icon-text" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                                <a class="btn btn-danger btn-icon-text" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h2>List empty</h2>
}

