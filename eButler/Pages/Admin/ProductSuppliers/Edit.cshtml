<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit ProductSupplier</h4>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProductSupplier.Id" />
                        <div class="form-group">
                            <label asp-for="ProductSupplier.Name" class="control-label"></label>
                            <input asp-for="ProductSupplier.Name" class="form-control" />
                            <span asp-validation-for="ProductSupplier.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductSupplier.Quantiy" class="control-label"></label>
                            <input asp-for="ProductSupplier.Quantiy" class="form-control" type="number" min="1"/>
                            <span asp-validation-for="ProductSupplier.Quantiy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductSupplier.Price" class="control-label"></label>
                            <input asp-for="ProductSupplier.Price" class="form-control" type="number" min="1" />
                            <span asp-validation-for="ProductSupplier.Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductSupplier.ProductId" class="control-label">Product</label>
                            <select asp-for="ProductSupplier.ProductId" class="form-control" asp-items="ViewBag.ProductName"></select>
                            <span asp-validation-for="ProductSupplier.ProductId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductSupplier.SupplierId" class="control-label">Supplier</label>
                            <select asp-for="ProductSupplier.SupplierId" class="form-control" asp-items="ViewBag.SupplierName"></select>
                            @*@if (User.IsInRole("Supplier"))
                            {
                                <input readonly asp-for="ProductSupplier.SupplierId" class="form-control" value=@id />
                            }
                            else
                            {
                                <select asp-for="ProductSupplier.SupplierId" class="form-control" asp-items="ViewBag.SupplierName"></select>
                            }*@
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductSupplier.Discount" class="control-label"></label>
                            <input asp-for="ProductSupplier.Discount" class="form-control" type="number" min="0"/>
                            <span asp-validation-for="ProductSupplier.Discount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductSupplier.Image" class="control-label"></label>
                            <input asp-for="ProductSupplier.Image" class="form-control" />
                            <span asp-validation-for="ProductSupplier.Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

