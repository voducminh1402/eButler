@model eButler.Pages.Admin.ProductSupliers.IndexModel

@{
    ViewData["Title"] = "ProductSupplier Management";
    Layout = "~/Pages/Admin/Shared/_AdminLayout.cshtml";
}


@if (Model.ProductSupplier != null)
{
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">ProductSupplier Management</h4>
                        <a class="card-description" asp-page="Create">
                            Create New Product Supplier
                        </a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Discount</th>
                                        <th>Image</th>
                                        <th>ProductID</th>
                                        <th>SupplierID</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ProductSupplier)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Quantiy)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Discount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Image)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Product.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Supplier.Id)
                                            </td>
                                            <td class="template-demo" style="padding-top: 0; padding-bottom: 10px">
                                                <a class="btn btn-primary btn-icon-text" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                                <a class="btn btn-info btn-icon-text" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                                <a class="btn btn-danger btn-icon-text" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                    @if(Model.listProductSupplier != null){
                                        @foreach (var ls in Model.listProductSupplier)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ls.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ls.Quantiy)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ls.Price)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ls.Discount)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ls.Image)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ls.Product.Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => ls.Supplier.Id)
                                                </td>
                                                <td class="template-demo" style="padding-top: 0; padding-bottom: 0">
                                                    <a class="btn btn-primary btn-icon-text" asp-page="./Edit" asp-route-id="@ls.Id">Edit</a>
                                                    <a class="btn btn-info btn-icon-text" asp-page="./Details" asp-route-id="@ls.Id">Details</a>
                                                    <a class="btn btn-danger btn-icon-text" asp-page="./Delete" asp-route-id="@ls.Id">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h2>List empty</h2>
}


