                            <tr>
                                <td class="text-muted">Image</td>

                                <td><h5 class="font-weight-bold mb-0">@Html.DisplayFor(model => model.ProductSupplier.Image)</h5></td>
                            </tr>
                            <tr>
                                <td class="text-muted">ProductId</td>

                                <td><h5 class="font-weight-bold mb-0">@Html.DisplayFor(model => model.ProductSupplier.Product.Id)</h5></td>
                            </tr>
                            <tr>
                                <td class="text-muted">SupplierId</td>

                                <td><h5 class="font-weight-bold mb-0">@Html.DisplayFor(model => model.ProductSupplier.Supplier.Id)</h5></td>
                            </tr>
                        </tbody>
                    </table>
                    <form method="post">
                        <input type="hidden" asp-for="ProductSupplier.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-page="./Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

